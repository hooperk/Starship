<Window x:Class="StarshipSheet.CrewRating"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StarshipSheet"
        Title="CrewRating" Height="300" Width="500">
    <Grid local:GridHelpers.RowCount="4" local:GridHelpers.StarRows="1" local:GridHelpers.ColumnCount="2" local:GridHelpers.StarColumns="0,1">
        <Label Grid.Row="0"><Bold>Crew Race</Bold></Label>
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2">
            <Grid Name="Races" local:GridHelpers.RowCount="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=RaceCount}" local:GridHelpers.ColumnCount="2" local:GridHelpers.StarColumns="1"/>
        </ScrollViewer>
        <Label Grid.Row="2" Grid.Column="0">Crew Quality:</Label>
        <ComboBox Name="Competency" Grid.Row="3" SelectionChanged="Competency_SelectionChanged"/>
        <Label Grid.Row="2" Grid.Column="1">Crew Value</Label>
        <TextBox Name="Value" Grid.Row="3" Grid.Column="1" IsReadOnly="True"/>
    </Grid>
</Window>
